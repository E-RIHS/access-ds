{% endblock %}

{% block script %}
    <script type="text/javascript">
        const title = '{{ title }}'
        const schema = '{{ schema | safe }}'
        const initialId = '{{ id }}'

        const formOptions =  { 
            "locale": "en-gb", 
            "editMode": "inline",
            "textareaProps": {
                "filled": true,
                "auto-grow": true,
            },
            "timePickerProps": {
                "format": "24hr"
            }
        }

        const tabs = [
            "Project form",
            "Debug: schema",
            "Debug: instance"
        ]

        Vue.component('VJsf', VJsf.default)

        new Vue({
            el: '#app',

            vuetify: new Vuetify(),

            data: {
                appBarDropdown: false,

                title: title,

                id: initialId,
                schema: JSON.parse(schema),
                instance: {},

                formOptions: formOptions,
                isValid: null,

                tab: null,
                tabItems: tabs,
                
                deleteDialog: false,
            },

            mounted() {
            },

            computed: {
            },

            watch: {
            },

            methods: {
            }
        })
    </script>
